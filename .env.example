# URL Monitoring Application Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/url_monitoring

# InfluxDB Configuration (Time-series data)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=url-monitoring
INFLUXDB_BUCKET=check-results
INFLUXDB_RETENTION_DAYS=90

# Redis Configuration (Caching and Sessions)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_KEY_PREFIX=url-monitor
REDIS_DEFAULT_TTL=3600
REDIS_SESSION_TTL=86400
REDIS_ALERT_STATE_TTL=604800
REDIS_CACHE_TTL=1800

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Database Connection Settings
DB_MAX_CONNECTIONS=20

# Monitoring Settings
DEFAULT_TIMEOUT=30
MAX_CONCURRENT_CHECKS=100
DATA_RETENTION_DAYS=90
ALERT_TRIGGER_MODE=all

# Email Notification Settings (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=URL Monitor <noreply@yourcompany.com>

# Webhook Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
TEAMS_WEBHOOK_URL=https://your-tenant.webhook.office.com/webhookb2/your-webhook-url
WEBHOOK_TIMEOUT=10000

# SMS Configuration (Twilio)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# Voice Configuration (Twilio)
VOICE_PROVIDER=twilio
VOICE_ACCOUNT_SID=your-twilio-account-sid
VOICE_AUTH_TOKEN=your-twilio-auth-token
VOICE_FROM_NUMBER=+1234567890

# SSL Certificate Monitoring
SSL_WARNING_DAYS=30
SSL_CRITICAL_DAYS=7
