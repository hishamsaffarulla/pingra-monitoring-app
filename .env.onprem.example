# Copy this file to .env on your on-prem server and update all values.

LOG_LEVEL=info

POSTGRES_DB=url_monitoring
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD

INFLUXDB_INIT_USERNAME=admin
INFLUXDB_INIT_PASSWORD=CHANGE_ME_INFLUX_PASSWORD
INFLUXDB_ORG=url-monitoring
INFLUXDB_BUCKET=check-results
INFLUXDB_RETENTION=90d
INFLUXDB_TOKEN=CHANGE_ME_INFLUX_TOKEN
INFLUXDB_RETENTION_DAYS=90

REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

JWT_SECRET=CHANGE_ME_LONG_RANDOM_SECRET
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

DB_MAX_CONNECTIONS=20
DEFAULT_TIMEOUT=30
MAX_CONCURRENT_CHECKS=100
DATA_RETENTION_DAYS=90
ALERT_TRIGGER_MODE=all

# SMTP (real email alerts)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASS=CHANGE_ME_SMTP_PASSWORD
SMTP_FROM=Pingra Alerts <alerts@example.com>
SMTP_SECURE=false

# Twilio (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
